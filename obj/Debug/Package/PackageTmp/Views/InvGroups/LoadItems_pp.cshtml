@model IEnumerable<EdgeMobile.Models.ViewModels.InvItemViewModel>
@using GridMvc.Html




@using (Html.BeginForm("LoadItems", "InvGroups", FormMethod.Post))
{

    @(Html
        .Grid(Model)
        .Columns(columns =>
        {
            columns.Add(model => model.InvItemID).Titled("InvItemID");
            columns.Add(model => model.ItemCode).Titled("ItemCode");
            columns.Add(model => model.ItemName).Titled("ItemName");
            columns.Add(model => model.UnitName).Titled("UnitName");
            //columns.Add(model => model.).Titled("Quantity");
            columns.Add(model => model.SellingPrice).Titled("SellingPrice");


            columns.Add().Titled("<input type='checkbox' /> ").Encoded(false).Sanitized(false)
                   .SetWidth(30)
                   .RenderValueAs(o => Html.CheckBox("checked", false, new { name = "selectedIds" }));
            columns.Add().Titled("QUN").Encoded(false).Sanitized(false)
                  .SetWidth(10)
                  .RenderValueAs(o => Html.TextBox("Qun", "", new { name = "Qun" }));

