@model IEnumerable<EdgeMobile.Models.ViewModels.InvoiceTViewModel>

@{
    ViewBag.Title = "DetailsInv";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-12 ">
    <p class=" text-dark">@Session["UserName"]</p>
    @Html.TextBox("UserName", @Session["UserName"], new { @style = "display:none" })
    @*<p class=" text-dark">User Login</p>*@
    @Html.TextBox("ArApInvoiceID", @Session["ArApInvoiceID"], new { @style = "display:none" })
</div>
<div class="container" style="padding-top:3rem;">
    <a class="add-custmoer-link" style="float:left;" href="~/Home/Cat"><i class="fas fa-home"></i></a>
    @*@Html.ActionLink("عميل جديد", "Create")*@
</div>
<h2 style="text-align-last :center">الفاتورة</h2>


<table class="table dir" style="width:50%; margin:auto; direction:rtl">

    @foreach (var item in Model)
    {
        <tr>
            <td align="center" colspan="2" style=" font-weight: bold; font-size:18px;"> 
                @Html.DisplayNameFor(model => model.InvoiceCode)

                @Html.DisplayFor(modelItem => item.InvoiceCode)


            </td>
        </tr>
        <tr>
            <td style=" text-align:center; font-weight: bold; font-size:18px;">
                @Html.DisplayNameFor(model => model.CustomerSupplierName)
            </td>
            <td style="direction:rtl; text-align:center;font-size:18px;">
                @Html.DisplayFor(modelItem => item.CustomerSupplierName)
            </td>


        </tr>
        <tr>

            <td style="direction:rtl; text-align:center; font-weight: bold; font-size:18px;">
                @Html.DisplayNameFor(model => model.InvoiceDate)
                
            </td>
            <td style="direction:rtl; text-align:center">
                @Html.DisplayFor(modelItem => item.InvoiceDate)
            </td>
        </tr>
        <tr>
            <td style="direction:rtl; text-align:center; font-weight: bold; font-size:18px;">
                @Html.DisplayNameFor(model => model.DelegateName)
            </td>
            <td style="direction:rtl; text-align:center">
                @Html.DisplayFor(modelItem => item.DelegateName)
            </td>

        </tr>
        <tr>
            <td style="direction:rtl; text-align:center; font-weight: bold; font-size:18px;">
                @Html.DisplayNameFor(model => model.BranchName)
            </td>
            <td style="direction:rtl; text-align:center">
                @Html.DisplayFor(modelItem => item.BranchName)
            </td>


        </tr>
        <tr>
            <td style="direction:rtl; text-align:center; font-weight: bold; font-size:18px;">
                @Html.DisplayNameFor(model => model.Netprice)
            </td>
            <td style="direction:rtl; text-align:center">
                @Html.DisplayFor(modelItem => item.Netprice)
            </td>


        </tr>
    }

</table>
<div id="partial">@{Html.RenderAction("DetailsT", "ArApInvoiceItemTemps", new { ArApInvoiceID = Session["ArApInvoiceID"] });}</div>
<br />
<br />
<div style="width:70%; margin:auto;text-align: center; font-size:20px">

    @Html.ActionLink("حفظ", "Save", new { id = Session["ArApInvoiceID"] }, new { @style = "padding:55px;" }) |
    @Html.ActionLink("تعديل", "LoadItems_Edit", "InvGroups", new { id = Session["ArApInvoiceID"] }, new { @style = "padding:55px;" }) |
    @Html.ActionLink("الغاء", "Delete", new { id = Session["ArApInvoiceID"] }, new { onclick = "return confirm('Are sure wants to delete?');" })

</div>

